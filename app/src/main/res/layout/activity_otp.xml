<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/two_view"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:clickable="true"
        android:onClick="onClick"
        android:text="2"
        android:textColor="#0f0f0f"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/five_view"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />



    <TextView
        android:id="@+id/five_view"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:text="5"
        android:textColor="#0f0f0f"
        android:textSize="40dp"
        android:clickable="true"
        android:onClick="onClick"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/two_view" />

    <TextView
        android:id="@+id/six_view"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:orientation="horizontal"
        android:text="6"
        android:textColor="#0f0f0f"
        android:textSize="40dp"
        android:clickable="true"
        android:onClick="onClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/five_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nine_view"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:text="9"
        android:textColor="#0f0f0f"
        android:textSize="40dp"
        android:clickable="true"
        android:onClick="onClick"
        app:layout_constraintStart_toEndOf="@+id/eight_view"
        app:layout_constraintTop_toBottomOf="@+id/six_view" />

    <ImageView
        android:id="@+id/cancel_view"
        android:layout_width="24dp"
        android:layout_height="48dp"
        android:layout_marginStart="80dp"
        android:clickable="true"
        android:onClick="onClick"
        android:layout_marginTop="20dp"
        android:src="@drawable/del_icon"
        app:layout_constraintStart_toEndOf="@+id/zero_view"
        app:layout_constraintTop_toBottomOf="@+id/nine_view" />

    <TextView
        android:id="@+id/three_view"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:clickable="true"
        android:onClick="onClick"
        android:text="3"
        android:textColor="#0f0f0f"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/six_view"
        app:layout_constraintStart_toEndOf="@+id/two_view" />

    <TextView
        android:id="@+id/four_view"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginEnd="80dp"
        android:orientation="horizontal"
        android:text="4"
        android:clickable="true"
        android:onClick="onClick"
        android:textColor="#0f0f0f"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/five_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/one_view"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="68dp"
        android:orientation="horizontal"
        android:text="1"
        android:clickable="true"
        android:onClick="onClick"
        android:textColor="#0f0f0f"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@id/four_view"
        app:layout_constraintEnd_toStartOf="@+id/two_view" />

    <TextView
        android:id="@+id/eight_view"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:text="8"
        android:textColor="#0f0f0f"
        android:textSize="40dp"
        android:clickable="true"
        android:onClick="onClick"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/five_view" />

    <TextView
        android:id="@+id/seven_view"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="80dp"
        android:orientation="horizontal"
        android:text="7"
        android:clickable="true"
        android:onClick="onClick"
        android:textColor="#0f0f0f"
        android:textSize="40dp"
        app:layout_constraintEnd_toStartOf="@+id/eight_view"
        app:layout_constraintTop_toBottomOf="@+id/four_view" />

    <TextView
        android:id="@+id/zero_view"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:text="0"
        android:textColor="#0f0f0f"
        android:textSize="40dp"
        android:weightSum="0.9"
        android:clickable="true"
        android:onClick="onClick"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eight_view" />

    <Button
        android:id="@+id/verify_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_shape"
        android:text="Verify"
        android:textAllCaps="false"
        android:textColor="#ffff"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zero_view"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Resend Code"
        app:layout_constraintBottom_toTopOf="@+id/two_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <LinearLayout
        android:layout_width="224dp"
        android:layout_height="55dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="@+id/three_view"
        android:weightSum="0.8"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/one_view">

        <EditText
            android:id="@+id/otp_et1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cursorVisible="false"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.2"
            android:background="@drawable/otp_edit_shape"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/otp_et2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cursorVisible="false"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.2"
            android:background="@drawable/otp_edit_shape"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/otp_et3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cursorVisible="false"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.2"
            android:background="@drawable/otp_edit_shape"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/otp_et4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cursorVisible="false"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.2"
            android:background="@drawable/otp_edit_shape"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            android:textSize="20dp" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="150dp"
        android:text="Verification Code"
        android:gravity="center"
        android:textColor="#0f0f0f"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/two_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>